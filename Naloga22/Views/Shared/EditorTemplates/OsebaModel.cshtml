@using Naloga22
@model Oseba;
@{
    ViewData["Title"] = "Registracija2";
}
<link rel="stylesheet" href="~/css/site.css" />

<div class="text-center">
    <h1 class="display-4">Validirana registracija</h1>
    @using (Html.BeginForm("efmss", "Oseba", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            <p>
                Ime:
                @Html.EditorFor(m => m.Ime)
                @Html.ValidationMessageFor(m => m.Ime, "", new { @class = "text-danger" })<br><br>
            </p>
            <p>
                Priimek:
                @Html.EditorFor(m => m.Priimek)
                @Html.ValidationMessageFor(m => m.Priimek, "", new { @class = "text-danger" })<br><br>
            </p>
            <p>
                Datum rojstva:
                @Html.EditorFor(m => m.Datum_rojstva, new { @readonly = "readonly", @id = "datepicker" })
                @Html.ValidationMessageFor(m => m.Datum_rojstva, "", new { @class = "text-danger" })<br><br>
            </p>
            <p>
                Kraj rojstva:
                @Html.EditorFor(m => m.Kraj_rojstva)
                @Html.ValidationMessageFor(m => m.Kraj_rojstva, "", new { @class = "text-danger" })<br><br>
            </p>
            <p>
                EMSO:
                @Html.EditorFor(m => m.EMSO)
                @Html.ValidationMessageFor(m => m.EMSO, "", new { @class = "text-danger" })<br><br>
            </p>
            <p>
                Email:
                @Html.EditorFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })<br><br>
            </p>
            <p>
                Geslo:
                @Html.EditorFor(m => m.geslo1)
                @Html.ValidationMessageFor(m => m.geslo1, "", new { @class = "text-danger" })<br><br>
            </p>
            <p>
                Ponovite geslo:
                @Html.EditorFor(m => m.geslo2)
                @Html.ValidationMessageFor(m => m.geslo2, "", new { @class = "text-danger" })<br><br>
            </p>

        </div>
        <input value="Next" type="submit">

    }
</div>
